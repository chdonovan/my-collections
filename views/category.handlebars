<h2 class="title is-2">Add a category</h2>
<div class="columns is-mobile">
    <form class="box column is-three-fifths is-offset-one-fifth" id="category-form">
        <div class="field">
            <label class="label">Name</label>
            <div class="control">
                <input class="input" type="text" name="category_name" placeholder="Text input">
            </div>
            <div class="control">
                <button class="button is-link" type="submit">Submit</button>
            </div>
        </div>
    </form>
</div>
<div class="columns is-mobile">
    <div class="box column is-three-fifths is-offset-one-fifth">
        <h2 class="is-2">Current Categories</h2>
        <ol>
            {{#each categories as |category|}}
            <li id="category-list"> {{category_name}}</li>
            {{/each}}
        </ol>
    </div>
</div>
<script src="/javascript/add-category.js"></script>