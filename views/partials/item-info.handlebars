<div class="column is-3">
    <div class="card">
        <div class="card-image">
            <figure class="image is-4by3">
                <img src="{{item_image}}" alt="Placeholder image">
            </figure>
        </div>
        <div class="card-content is-success is-light">
            <div class="media">
                <div class="media-left">
                    <figure class="image is-48x48"> 
                        <img src="/assets/User.PNG" alt="Placeholder image">
                    </figure>
                    {{!-- <span class="icon is-large"></span>
                    <i class="fas fa-home-2x"></i>
                    </span> --}}
                </div>
                <div class="media-content">
                    <p class="title is-4">{{item_name}}</p>
                    <p class="subtitle is-6">{{category.category_name}}
                        <br> Owned by: {{ user.username}}
                    </p>
                </div>
            </div>

            <div class="content">
                {{item_description}}
                <br>
                Inventory: {{inventory}}
                <br>

            </div>
        </div>
    </div>
</div>