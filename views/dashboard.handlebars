{{#if items.length}}
<section>
    <h1 class="title is-1">Your Collection</h1>
    <ol>
        {{#each items as |item|}}
        <li>
            {{!-- add helper --}}
            {{> item-info item}}
            <a href="/dashboard/edit/{{item.id}}" class="edit-link">Edit Item</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<section>
    <h1 class="title is-1">Add to your collection!</h1>

    <form class="new-item-form">
        <div class="field">
            <label class="label" for="item-title">Title</label>
            <div class="control">
                <input class="input" type="text" id="item-title" name="item-title" />
            </div>
        </div>
        <div class="field">
            <label class="label" for="item-text">Item Description</label>
            <div class="control">
                <input class="input" type="text" id="item-text" name="item-text" />
            </div>
        </div>
        <div class="field">
            <label class="label" for="item-inventory">Inventory</label>
            <div class="control">
                <input class="input" type="text" id="item-inventory" name="item-inventory" />
            </div>
        </div>
        <div class="select">
                <select name="category" id="category">
                    <option value="1">1. Pokemon Cards</option>
                    <option value="2">2. Sports Cards</option>
                    <option value="3">3. Comic Books </option>
                    <option value="4">4. Vinyl Records</option>
                </select>
        </div>
        <div class="control">
            <button class="button is-link" type="submit" class="btn">Create</button>
        </div>
    </form>
</section>



<script src="/javascript/add-item.js"></script>